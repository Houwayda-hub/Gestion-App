<!-- Modal -->
<div class="modal fade" id="addCL"  role="dialog"  data-backdrop="static" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nouveau client</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div class="container">
                <form role="form"
                 
                    <div class="form-group">
                      <label for="nom" >Nom & Prénom</label>
                      <input type="text" name="nom" id="nom"  required  minlength="5" maxlength="15" class="form-control">
                      </div>
                      <div class="form-group">
                       <label>Téléphone</label>
                      <input type="text" name="tel"  id="tel" required minlength="10" maxlength="10" class="form-control">
                      </div>
                      <div class="form-group">
                     <label>Fax</label>
                      <input type="text" name="fax" id="fax"  required minlength="10" maxlength="10"  class="form-control" > 
                      </div>
                       <div class="form-group">
                     <label>Adresse</label>
                      <input type="text" name="adresse" id="adresse"  required minlength="5" maxlength="10"  class="form-control" > 
                      </div>
                       <div class="form-group">
                     <label>E-mail</label>
                      <input type="text" name="email" id="email" required minlength="2" maxlength="15"  class="form-control" > 
                      </div>
                      <div class="form-group">
                        <label>Matricule Fiscale</label>
                      <input type="text" name="mat_fiscale" id="mat_fiscale" required minlength="10" maxlength="10"  class="form-control">
               </div>
                  </form>
                      </div>     
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary" data-dismiss="modal" onclick="addCL()" >Enregister</button>
                    </div>
                   </div>
                  </div>
              </div>


<div class="modal" id="editCL" data-backdrop="static">
                <div class="modal-dialog">
                  <div class="modal-content">
                  
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Modifier le client</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    
                    <!-- Modal body -->
                       <div class="modal-body">
                        <div class="container">
                            <form role="form" method="post">
                 
                    <div class="form-group">
                      <label>Nom & Prénom</label>
                      <input type="text" name="nom" id="nomC"  required minlength="10" maxlength="25" class="form-control">
                      </div>
                      <div class="form-group">
                       <label>Téléphone</label>
                      <input type="text" name="tel"  id="telC" required minlength="10" maxlength="10" class="form-control">
                      </div>
                      <div class="form-group">
                     <label>Fax</label>
                      <input type="text" name="fax" id="faxC" required minlength="10" maxlength="10"  class="form-control" > 
                      </div>
                       <div class="form-group">
                     <label>Adresse</label>
                      <input type="text" name="adresse" id="adresseC" required minlength="30" maxlength="30"  class="form-control" > 
                      </div>
                       <div class="form-group">
                     <label>E-mail</label>
                      <input type="text" name="email" id="emailC"  required minlength="20" maxlength="20" class="form-control" > 
                      </div>
                      <div class="form-group">
                        <label>Matricule Fiscale</label>
                      <input type="text" name="mat_fiscale" id="mat_fiscaleC" required minlength="10" maxlength="10" class="form-control">
                     </div>
                  </form>
                        </div>
                      </div>     
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary" data-dismiss="modal" onclick="editCL()" >Enregister</button>
                    </div>
